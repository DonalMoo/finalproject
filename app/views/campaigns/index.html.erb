<p id="notice"><%= notice %></p>

<h1>Voucher Code Banks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Total codes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.title %></td>
        <td><%= campaign.max_code %></td>
        <td><%= link_to 'View codes', campaign %></td>
      </tr>
    <% end %>
  </tbody>
</table>

