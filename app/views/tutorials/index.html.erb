              <h1>Tutorials</h1>
              <p>choose from a wide range of tutorials available, with previews, buy or enter your voucher code to gain access to full videos</p>
              </div>
              </div>
            <% @tutorials.each do |tutorial| %>
                  <div class="col-xs-2">
                    <h3><%= tutorial.title %></h3>
                      <%= image_tag(tutorial.image_url, :class => "list_image") %>
                  </div>
                  <div class="col-xs-8">
                  <%= sanitize(tutorial.description) %>
                  <h4><%= number_to_currency(tutorial.price, unit: "â‚¬") %></h4> 
                  <h4>Video Privew</h4>  
